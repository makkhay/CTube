<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <ImageButton
                android:id="@+id/videoThumbnail"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/videoThumbnail"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/videoPubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoTitle"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/videoThumbnail"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/videoViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoPubDate"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/videoThumbnail"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />




            <ImageButton
                android:id="@+id/shareButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoViewCount"
                android:layout_margin="@dimen/card_button_margin"
                android:textColor="@color/colorAccent1"
                app:srcCompat="@drawable/baseline_share_black_24dp"
                android:layout_alignParentEnd="true"
                />


            <ImageButton
                android:id="@+id/favoriteButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoViewCount"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="103dp"
                android:layout_marginBottom="@dimen/card_button_margin"
                android:textColor="@color/colorAccent1"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>